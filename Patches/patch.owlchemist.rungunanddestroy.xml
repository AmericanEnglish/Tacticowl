<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationInsert">
				<xpath>Defs/ThinkTreeDef[defName = "Humanlike"]/thinkRoot[@Class = "ThinkNode_Priority"]/subNodes/li[@Class="ThinkNode_ConditionalColonist"]</xpath> <!--Priority is important here, hence the insert after this specific subNode--> 
				<value> 
					<!-- Do search and destroy instead of waiting -->
					<li Class="RunGunAndDestroy.ThinkNode_ConditionalSearchAndDestroy">
						<subNodes>
							<li Class="ThinkNode_Priority">
								<subNodes>
									<li Class="JobGiver_MoveToStandable"/>
									<li Class="JobGiver_AIFightEnemies">
										<targetAcquireRadius>200</targetAcquireRadius>
										<targetKeepRadius>32</targetKeepRadius>
									</li>
									<li Class="JobGiver_AIGotoNearestHostile" />
								</subNodes>
							</li>
						</subNodes>
					</li>
				</value>
			</li>
			<!-- Disabling this for now, reports that it doesn't work...
			<li Class="PatchOperationInsert">
				<success>Always</success>
				<xpath>Defs/ThinkTreeDef[defName = "AndroidLike"]/thinkRoot[@Class = "ThinkNode_Priority"]/subNodes/li[@Class="ThinkNode_QueuedJob"]</xpath>  
				<value>
					<li Class="RunGunAndDestroy.ThinkNode_ConditionalSearchAndDestroy">
						<subNodes>
							<li Class="ThinkNode_Priority">
								<subNodes>
									<li Class="JobGiver_AIFightEnemies">
										<targetAcquireRadius>200</targetAcquireRadius>
										<targetKeepRadius>72</targetKeepRadius>
									</li>
									<li Class="JobGiver_AIGotoNearestHostile" />
								</subNodes>
							</li>
						</subNodes>
					</li>
				</value>
			</li>
			-->
		</operations>
	</Operation>
</Patch>